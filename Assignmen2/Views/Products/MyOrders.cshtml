@model IEnumerable<Assignmen2.ViewModels.OrderViewModel>

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders.</p> 
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Seller Email</th>
                <th>Quantity</th>
                <th>Base Price</th>
                <th>Commission (10%)</th>
                <th>Tax (5%)</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.SellerEmail</td>
                    <td>@order.Quantity</td>
                    <td>@order.BasePrice.ToString("C")</td>
                    <td>@order.Commission.ToString("C")</td>
                    <td>@order.Tax.ToString("C")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
