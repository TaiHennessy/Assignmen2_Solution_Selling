@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h4 class="mb-3 text-center">Create a new account</h4>
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- UserName -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Username" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Username">
                                <i class="bi bi-envelope-fill me-2"></i>Email
                            </label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">
                                <i class="bi bi-envelope-fill me-2"></i>Confirm Email
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password">
                                <i class="bi bi-lock-fill me-2"></i>Password
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword">
                                <i class="bi bi-lock-fill me-2"></i>Confirm Password
                            </label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Date of Birth -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.DateOfBirth" type="date" class="form-control" aria-required="true" placeholder="Date of Birth" />
                            <label asp-for="Input.DateOfBirth">
                                <i class="bi bi-calendar3 me-2"></i>Date of Birth
                            </label>
                            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                        </div>

                        <!-- City -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                            <label asp-for="Input.City">
                                <i class="bi bi-building me-2"></i>City
                            </label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <!-- Country -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Country" class="form-control" aria-required="true" placeholder="Country" />
                            <label asp-for="Input.Country">
                                <i class="bi bi-geo-alt-fill me-2"></i>Country
                            </label>
                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                        </div>

                        <!-- Register Button -->
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">
                            <i class="bi bi-person-plus-fill me-2"></i>Register
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
