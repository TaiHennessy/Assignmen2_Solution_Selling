@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Are You a Robot?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Are You a Robot?</h3>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Please prove that you are not a robot by completing the verification below.</p>

                    <!-- Fake CAPTCHA image for visual style -->
                    <img src="https://via.placeholder.com/300x100?text=CAPTCHA+Verification" alt="CAPTCHA" class="img-fluid mb-3" />
                    <p class="text-muted">Enter the characters you see in the image above.</p>

                    <!-- Fake input for CAPTCHA (functionality not implemented) -->
                    <input type="text" class="form-control text-center mb-3" placeholder="Enter CAPTCHA" disabled />

                    <hr />

                    <!-- Hidden section for account confirmation -->
                    @if (Model.DisplayConfirmAccountLink)
                    {
                        <!-- Simulate CAPTCHA success and display confirmation link -->
                        <p class="text-success">Verification successful!</p>
                        <button class="btn btn-success" id="confirm-account-button">Confirm Account</button>
                    }
                    else
                    {
                        <p class="text-warning">Please check your email to confirm your account.</p>
                    }

                    <div id="hidden-confirmation" class="mt-3" style="display: none;">
                        <!-- Hidden link for email confirmation -->
                        <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-success">Click to Confirm</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simulate clicking the CAPTCHA confirm button to reveal confirmation link
        document.getElementById('confirm-account-button').addEventListener('click', function() {
            document.getElementById('hidden-confirmation').style.display = 'block';
        });
    </script>
}
