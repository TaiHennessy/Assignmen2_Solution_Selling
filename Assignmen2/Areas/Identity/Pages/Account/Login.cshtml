@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <form id="account" method="post">
                        <h4 class="mb-3 text-center">Use your account to log in</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

                        <!-- Email Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">
                                <i class="bi bi-envelope-fill me-2"></i>Email
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password" class="form-label">
                                <i class="bi bi-lock-fill me-2"></i>Password
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                <i class="bi bi-check-circle-fill me-2"></i>@Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Log in
                        </button>

                        <!-- Forgot Password, Register, Resend Email Links -->
                        <div class="text-center mt-4">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                <i class="bi bi-question-circle-fill me-1"></i>Forgot your password?
                            </a>
                            <br />
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                <i class="bi bi-person-plus-fill me-1"></i>Register as a new user
                            </a>
                            <br />
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">
                                <i class="bi bi-envelope-fill me-1"></i>Resend email confirmation
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
